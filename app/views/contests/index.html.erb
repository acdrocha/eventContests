<p id="notice"><%= notice %></p>

<h1>Contests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contests.each do |contest| %>
      <tr>
        <td><%= contest.name %></td>
        <td><%= contest.description %></td>
        <td><%= link_to 'Show', event_contest_path(@event, contest) %></td>
        <td><%= link_to 'Edit', edit_event_contest_path(@event, contest) %></td>
        <td><%= link_to 'Destroy', [@event, contest], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contest', new_event_contest_path(@event) %>
