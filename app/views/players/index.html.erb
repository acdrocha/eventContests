<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.picture %></td>
        <td><%= link_to 'Show', event_player_path(@event, player) %></td>
        <td><%= link_to 'Edit', edit_event_player_path(@event, player) %></td>
        <td><%= link_to 'Destroy', [@event, player], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_event_player_path %>
